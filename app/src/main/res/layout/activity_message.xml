<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_message"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    tools:context="message.mad.kishore.org.messageboard.MessageActivity"
    android:paddingBottom="0dp">

    <TextView
        android:text="Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/loginNameText_view" />

    <ListView
        android:layout_width="match_parent"
        android:id="@+id/listView"
        android:layout_height="420dp"
        android:layout_below="@+id/imageView"
        android:layout_alignParentStart="true" />

    <ImageView
        app:srcCompat="@mipmap/logout"
        android:id="@+id/imageView"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:scaleType="fitCenter"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:srcCompat="@mipmap/gallery"
        android:id="@+id/imageViewImg"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/message_input"
        android:text=""
        android:hint="Enter your message and send"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/imageViewMessage" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:srcCompat="@mipmap/send"
        android:id="@+id/imageViewMessage"
        android:scaleType="fitCenter"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/imageView" />
</RelativeLayout>
